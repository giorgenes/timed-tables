== Using timed-tables with rails

class TimedTable < ActiveSupport::Base
	url = "http://url-for-timed-tables"
end

tt = TimedTable.create(:columns => 3)

tt.create_row("row1")
tt.create_row("row2")

tt.rows
=>
["row1", "row2"]

tt.update_row("row1", Date.today.jd, [100, 200, 300])
tt.update_row("row1", Date.today.jd-1, [100, 0, 0])

table = tt.at(Date.today.jd)
=>
{
	"row1" => [
		[0] 200,
		[1] 200,
		[2] 300
	],
	"row2" => [
		[0] 0,
		[1] 0,
		[2] 0
	]
}


